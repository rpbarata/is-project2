<div class="row justify-content-center">
  <div class="col-4">
    <h1 class="text-center">Sign In</h1>

    <%= form_with url: sign_in_path do |f| %>
      <div class="mb-3">
        <%= f.label :email, for: "sessionNewEmail", class: "form-label"%>
        <%= f.text_field :email, class: "form-control", id: "sessionNewEmail", "aria-describedby": "emailHelp" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, for: "sessionNewEmailPassword", class: "form-label" %>
        <%= f.password_field :password, class: "form-control", id: "sessionNewEmailPassword" %>
      </div>

      <%= f.submit 'Sign In', class: "btn btn-primary" %>
      <p class="text-end"><%= link_to "Sign Up", sign_up_path %></p>
    <% end %>
  </div>
</div>
