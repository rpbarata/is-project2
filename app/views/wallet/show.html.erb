<div class="row justify-content-between">
  <div class="col-4">
    <div class="d-inline-block">
      <p class="text"> <span class="fw-bold fs-3"> Balance: </span> <%= number_to_currency(@wallet.balance, :unit => "â‚¬") %> </p>
    </div>
  </div>

  <div class="col-4">
    <%= form_with(model: @wallet) do |form| %>
      <div class="row">
        <div class="col">
          <div class="form-group" style="display: inline-block">
            <%= form.label :add_balance %>
            <%= form.number_field :add_balance, step: 0.01, min: 0, class: "form-control" %>
          </div>
          <div class="form-group"  style="display: inline-block">
            <button class="btn btn-primary" type="button" onclick="this.form.submit()">
              Charge
            </button>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
