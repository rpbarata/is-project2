<div class="row">
  <div class="col">
    <div class="d-inline-block">
      <p class="text"> <span class="fw-bold">Departure Point: </span> <%= @trip.departure_point %></p>
    </div>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="d-inline-block">
      <p class="text"> <span class="fw-bold">Destination: </span> <%= @trip.destination %></p>
    </div>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="d-inline-block">
      <p class="text"> <span class="fw-bold">Departure Time: </span> <%= @trip.departure_time %></p>
    </div>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="d-inline-block">
      <p class="text"> <span class="fw-bold">Capacity: </span> <%= format_trip_capacity(@trip) %></p>
    </div>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="d-inline-block">
      <p class="text"> <span class="fw-bold">Price: </span> <%= number_to_currency(@trip.price, :unit => "â‚¬")%></p>
    </div>
  </div>
</div>

<h1 class="mt-3">Passengers</h1>
<div class="table-responsive">
  <table class="table table-sm table-striped table-hover align-middle">
    <thead>
      <tr>
        <th scope="col" >Name</th>
        <th scope="col" class="text-center">Email</th>
        <th scope="col" class="text-center">Bought At</th>
      </tr>
    </thead>

    <tbody>
      <% @passengers.each do |passenger| %>
        <tr>
          <td><%= passenger.username %></td>
          <td class="text-center"><%= passenger.email %></td>
          <%# TODO: REMOVE THIS QUERY!!!!%>
          <td class="text-center"><%= l(passenger.get_ticket(@trip).created_at) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @passengers %>
